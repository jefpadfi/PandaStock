<RootWidget>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            pos_hint: {'top': 1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: ''
                    app_icon: ''
                    with_previous: False
                    markup: True
                    size_hint_x: None
                    width: 0
                ActionGroup:
                    text: 'File'
                    mode: 'spinner'
                    dropdown_width: '175dp'
                    ActionButton:
                        text: 'Save'
                    ActionButton:
                        text: 'Close'
                ActionGroup:
                    text: 'About'
                    mode: 'spinner'
                    dropdown_width: '175dp'
                    ActionButton:
                        text: 'Updates'
                    ActionButton:
                        text: 'About PandaStock'
        BoxLayout:
            orientation: 'horizontal'
            AnchorLayout:
                anchor_y: 'center'
                anchor_x: 'left'
                size_hint_x: None
                width: '200dp'
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                AnchorLayout:
                    anchor_y: 'top'
                    anchor_x: 'left'
                    Label:
                        size_hint_y: None
                        size_hint_x: None
                        text: 'Left Area'
            BoxLayout:
                orientation: 'vertical'
                AnchorLayout:
                    anchor_y: 'center'
                    anchor_x: 'right'
                    width: '200dp'
                    canvas.before:
                        Color:
                            rgba: 1, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                    AnchorLayout:
                        anchor_y: 'top'
                        anchor_x: 'left'
                        padding: [5, 10, max(topLBL.width - topLBL.texture_size[0], 10), 10]
                        Label:
                            id: topLBL
                            size_hint_y: None
                            size_hint_x: None
                            text_size: max(self.width, 0), None
                            text: 'Top Right Area    adfasdfasdfasdfasdfasdfasdfasd                '
                AnchorLayout:
                    anchor_y: 'bottom'
                    anchor_x: 'right'
                    width: '200dp'
                    canvas.before:
                        Color:
                            rgba: 1, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                    AnchorLayout:
                        anchor_y: 'top'
                        anchor_x: 'left'
                        padding: [5, 10, max(lbl.width - lbl.texture_size[0], 10), 10]
                        Label:
                            id: lbl
                            size_hint_y: None
                            size_hint_x: None
                            text_size: max(self.width, 0), None
                            text: 'Bottom Right Area'
                    AnchorLayout:
                        anchor_y: 'top'
                        anchor_x: 'center'
                        padding: [0, 10, max(btmLBL.width - btmLBL.texture_size[0], 10), 10]
                        Label:
                            id: btmLBL
                            size_hint_y: None
                            size_hint_x: None
                            text_size: max(self.width, 0), None
                            text: 'Bottom Right Area'
